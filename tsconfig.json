{
  "compilerOptions": {
    "outDir": "./lib/",
    "declarationDir": "./lib/types/",
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true,
    "esModuleInterop": true,
    "removeComments": true,
    "jsx": "react"
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.*",
    "src/demo",
    "src/docs"
  ],
  "include": [
    "src/components"
  ]
}
